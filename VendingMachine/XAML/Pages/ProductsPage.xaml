<Page x:Class="VendingMachine.XAML.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      Title="MainPage" MinWidth="580" MinHeight="100" Grid.IsSharedSizeScope="True">
    <Grid x:Name="ProductsGrid">
        <Grid.Background>
            <RadialGradientBrush Opacity="0.65">
                <GradientStop Color="#FF312932" Offset="1"/>
                <GradientStop Color="#FF180C19" Offset="0.017"/>
            </RadialGradientBrush>
        </Grid.Background>
    </Grid>
</Page>
